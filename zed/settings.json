// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Catppuccin Mocha",
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "ui_font_family": "Berkeley Mono",
  "buffer_font_size": 18,
  "buffer_font_family": "Berkeley Mono",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "GruvChad Dark Hard"
  },
  "terminal": {
    "dock": "right",
    "working_directory": "current_project_directory",
    "font_family": "BerkeleyMono Nerd Font Mono Plus Font Awesome Plus Font Awesome Extension Plus Octicons Plus Power Symbols Plus Codicons Plus Pomicons Plus Font Logos Plus Material Design Icons Plus Weather Icons",
    "font_size": 18,
    "line_height": "comfortable",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "tabs": {
    "file_icons": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "relative_line_numbers": true,
  "inlay_hints": {
    "enabled": true,
    "show_other_hints": false
  },
  "languages": {
    "TOML": {
      "language_servers": ["!taplo"]
    },
    "Swift": {
      "enable_language_server": true,
      "language_servers": ["sourcekit-lsp"],
      "formatter": "language_server",
      "format_on_save": "on"
    }
  }
}
